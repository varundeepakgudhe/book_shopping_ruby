<h2>Create User</h2>

<%= form_with(model: @user, url: admin_users_path) do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-4"%>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control mb-4"%>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mb-4"%>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autocomplete: "your name", class: "form-control mb-4"%>
  </div>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autocomplete: "pick a username", class: "form-control mb-4"%>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_area :address, autocomplete: "your address", class: "form-control mb-4"%>
  </div>

  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number, autocomplete: "your phone number", class: "form-control mb-4"%>
  </div>

  <div class="field">
    <%= f.label :credit_card_number %><br />
    <%= f.text_field :credit_card_number, autocomplete: "credit card number", class: "form-control mb-4"%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", data: { turbo: false }, class: "btn btn-primary mb-4"%>
  </div>
<% end %>

