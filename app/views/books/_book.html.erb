<div id="<%= dom_id book %>">
  <p>
    <strong>Id:</strong>
    <%= book.id %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= book.name %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= book.author %>
  </p>

  <p>
    <strong>Publisher:</strong>
    <%= book.publisher %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= book.price %>
  </p>

  <p>
    <strong>Stock:</strong>
    <%= book.stock %>
  </p>

  <p>
    <strong>Average Rating:</strong>
    <%= book.average_rating.round(1) %>
  </p>

</div>
