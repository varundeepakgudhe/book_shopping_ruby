<p style="color: green"><%= notice %></p>

<h1>Books</h1>

<div id="books">

  <%= form_with(url: books_path, method: "get") do %>
    <%= label_tag(:rating, "Rating: ") %>
    <%= text_field_tag(:rating, params[:rating], class: "m-4") %>
    <%= label_tag(:author, "Author: ") %>
    <%= text_field_tag(:author, params[:author]) %>
    <%= submit_tag("Filter") %>
  <% end %>


  <% @books.each do |book| %>
    <%= render book %>
    <p>
      <%= link_to "Show this book", book %>
    </p>
  <% end %>
</div>

<%= link_to "New book", new_book_path %>
